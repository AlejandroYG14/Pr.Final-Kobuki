<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <Sequence>
            <Action ID="GetWaypoint" waypoint="{wp}"/>
            <Action ID="Move" goal="{wp}"/>
            <Action ID="Seeker" />
            <Action ID="GetOrigin" origin="{origin}"/>
            <Action ID="Move" goal="{origin}"/>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="GetWaypoint">
            <output_port name="waypoint"/>
        </Action>
        <Action ID="GetOrigin">
            <output_port name="origin"/>
        </Action>
        <Action ID="Move">
            <input_port name="goal"/>
        </Action>
        <Action ID="Seeker">
            <!-- No requiere puertos de entrada o salida -->
        </Action>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

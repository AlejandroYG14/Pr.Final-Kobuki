<?xml version="1.0"?>
<root main_tree_to_execute="FetchObjectTree">
  <!-- Behavior Tree principal para buscar y recoger objetos -->
  <BehaviorTree ID="FetchObjectTree">
    <Sequence name="fetch_sequence">
      <!-- Obtener punto de navegación -->
      <GetWaypoint name="get_waypoint" station_id=""/>
      
      <!-- Navegar al punto -->
      <NavigateToWaypoint name="navigate_to_waypoint" waypoint="{waypoint}"/>
      
      <!-- Comportamiento en la estación -->
      <BehaviorTreeNode name="behavior_tree_node"/>
    </Sequence>
  </BehaviorTree>
</root> 